{% extends 'admin_painel/base_admin.html' %}

{% block title %}Gerenciar Aulas - GIRO DNC{% endblock %}
{% block page_title %}Gerenciar Aulas{% endblock %}

{% block content %}
<div class="admin-header">
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <h1><i class="bi bi-calendar-week-fill me-2"></i>Gerenciar Aulas</h1>
      <p class="mb-0">Total: {{ aulas.count }} aula(s)</p>
    </div>
    <a href="/admin/paginas/aula/add/" class="btn btn-admin btn-lg">
      <i class="bi bi-calendar-plus-fill me-2"></i>Nova Aula
    </a>
  </div>
</div>

<div class="admin-card">
  <div class="table-responsive">
    <table class="table table-admin table-hover">
      <thead>
        <tr>
          <th>Data</th>
          <th>Turma</th>
          <th>Tema</th>
          <th>Horário</th>
          <th>Realizada</th>
          <th>Vídeo</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {% for aula in aulas|slice:":50" %}
        <tr>
          <td>{{ aula.data|date:"d/m/Y" }}</td>
          <td>{{ aula.turma.nome }}</td>
          <td>{{ aula.tema }}</td>
          <td>{{ aula.hora_inicio|time:"H:i" }} - {{ aula.hora_fim|time:"H:i" }}</td>
          <td>
            {% if aula.realizada %}
              <span class="badge badge-ativo">Sim</span>
            {% else %}
              <span class="badge badge-pendente">Não</span>
            {% endif %}
          </td>
          <td>
            {% if aula.video %}
              <i class="bi bi-camera-video-fill text-success"></i>
            {% else %}
              <i class="bi bi-camera-video-off text-muted"></i>
            {% endif %}
          </td>
          <td>
            <a href="/admin/paginas/aula/{{ aula.id }}/change/" class="btn btn-sm btn-outline-primary">
              <i class="bi bi-pencil"></i>
            </a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
