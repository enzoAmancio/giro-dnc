{% extends 'admin_painel/base_admin.html' %}

{% block title %}Gerenciar Turmas - GIRO DNC{% endblock %}
{% block page_title %}Gerenciar Turmas{% endblock %}

{% block content %}
<div class="admin-header">
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <h1><i class="bi bi-collection-fill me-2"></i>Gerenciar Turmas</h1>
      <p class="mb-0">Total: {{ turmas.count }} turma(s)</p>
    </div>
    <a href="/admin/paginas/turma/add/" class="btn btn-admin btn-lg">
      <i class="bi bi-plus-circle-fill me-2"></i>Nova Turma
    </a>
  </div>
</div>

<div class="admin-card">
  <div class="table-responsive">
    <table class="table table-admin table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>Modalidade</th>
          <th>Nível</th>
          <th>Alunos</th>
          <th>Professor</th>
          <th>Status</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {% for turma in turmas %}
        <tr>
          <td>#{{ turma.id }}</td>
          <td><strong>{{ turma.nome }}</strong></td>
          <td>{{ turma.modalidade }}</td>
          <td>{{ turma.get_nivel_display }}</td>
          <td>
            <span class="badge bg-info">{{ turma.alunos.count }} aluno(s)</span>
          </td>
          <td>
            {% if turma.professor %}
              {{ turma.professor.get_full_name }}
            {% else %}
              <span class="text-muted">Sem professor</span>
            {% endif %}
          </td>
          <td>
            {% if turma.ativa %}
              <span class="badge badge-ativo">Ativa</span>
            {% else %}
              <span class="badge badge-inativo">Inativa</span>
            {% endif %}
          </td>
          <td>
            <div class="btn-group btn-group-sm">
              <a href="/admin/paginas/turma/{{ turma.id }}/change/" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i>
              </a>
            </div>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
